@using CrystalCarCare.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<style>
    body {
        background-color: #111; /* dark background */
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
        color: #FFD700;
    }

    /* Center login container */
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 70px); /* leave space for navbar */
        padding-top: 50px;
    }

    /* Login box */
    .login-box {
        background-color: #1a1a1a; /* dark card background */
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(255, 215, 0, 0.3); /* subtle gold glow */
        width: 320px;
        text-align: center;
        border: 1px solid #FFD700;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .login-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(255, 215, 0, 0.5);
        }

        .login-box label {
            display: block;
            font-weight: bold;
            color: #FFD700;
            margin-bottom: 5px;
            text-align: left;
        }

        .login-box input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 6px;
            border: 1px solid #444;
            outline: none;
            background-color: #111;
            color: #FFD700;
        }

            .login-box input:focus {
                border-color: #FFD700;
                box-shadow: 0 0 10px rgba(255, 215, 0, 0.4);
            }

        .login-box button {
            background-color: #FFD700; /* gold button */
            color: #111;
            font-weight: bold;
            padding: 10px;
            width: 100%;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: 0.3s all;
        }

            .login-box button:hover {
                background-color: #FFA500; /* darker gold on hover */
                transform: scale(1.05);
                box-shadow: 0 8px 20px rgba(255, 215, 0, 0.4);
            }

    .message {
        margin-top: 15px;
        color: #FFD700;
        font-weight: bold;
    }
</style>

<div class="login-container">
    <div class="login-box">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <button type="submit">Login</button>
        }
        <p class="message">@ViewBag.Message</p>
    </div>
</div>
