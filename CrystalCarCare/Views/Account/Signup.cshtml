@model CrystalCarCare.Models.UserRegister
@{
    ViewBag.Title = "Signup";
}

<style>
    body {
        background-color: #f0f4f8;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .signup-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 70px); /* leaves space for navbar */
        padding-top: 50px;
    }

    .signup-box {
        background-color: #1e3a8a; /* deep blue */
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.3);
        width: 350px;
        text-align: center;
    }

        .signup-box h2 {
            color: white;
            margin-bottom: 20px;
        }

        .signup-box label {
            display: block;
            font-weight: bold;
            color: white;
            margin-bottom: 5px;
            text-align: left;
        }

        .signup-box input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 6px;
            border: none;
            outline: none;
        }

        .signup-box button {
            background-color: #2563eb;
            color: white;
            font-weight: bold;
            padding: 10px;
            width: 100%;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: 0.3s;
        }

            .signup-box button:hover {
                background-color: #1d4ed8;
            }
</style>

<div class="signup-container">
    <div class="signup-box">
        <h2>Signup</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
            <div>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <button type="submit">Signup</button>
        }
    </div>
</div>
