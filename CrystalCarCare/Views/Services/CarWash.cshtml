@{
    ViewBag.Title = "Car Wash";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: #111; /* dark background */
        color: #FFD700; /* gold text for headings */
        font-family: 'Roboto', sans-serif;
    }

    h2 {
        color: #FFD700;
        margin-bottom: 1rem;
        text-align: center;
    }

    p {
        color: #e0e0e0;
        text-align: center;
        margin-bottom: 2rem;
    }

    .card {
        background-color: #1a1a1a; /* dark card background */
        color: #FFD700; /* gold text for headings */
        border: none;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        padding: 1.5rem;
        margin: 1rem 0;
    }

        .card h5 {
            color: #FFD700;
            margin-bottom: 0.5rem;
        }

        .card p {
            color: #e0e0e0; /* light gray for descriptions */
            margin-bottom: 1rem;
        }

    .btn-primary, .btn-success {
        background-color: #FFD700; /* gold button */
        color: #111; /* dark text */
        border: none;
        padding: 0.5rem 1.2rem;
        border-radius: 8px;
        font-weight: 500;
        transition: 0.3s;
        cursor: pointer;
    }

        .btn-primary:hover, .btn-success:hover {
            background-color: #FFA500; /* darker gold on hover */
            color: #111;
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(255, 215, 0, 0.4);
        }
</style>

<div class="carwash-page py-5">
    <div class="container">
        <!-- Deluxe Wash -->
        <div class="card service-card mb-5">
            <div class="row g-0 align-items-stretch">
                <!-- Image -->
                <div class="col-md-6">
                    <img src="~/Content/images/carwash3.jpeg" alt="Deluxe Wash" />
                </div>
                <!-- Details -->
                <div class="col-md-6 details d-flex flex-column justify-content-center">
                    <h3>Deluxe Wash</h3>
                    <p class="lead">Full premium wash + Interior deep cleaning and tire polish.</p>
                    <p><strong>Price:</strong> $50</p>
                    <p><strong>What’s Included:</strong></p>
                    <ul>
                        <li>Exterior wash</li>
                        <li>Interior deep cleaning</li>
                        <li>Tire polish</li>
                        <li>Waxing & Engine cleaning</li>
                    </ul>
                    <a href="@Url.Action("Create", "Bookings", new { serviceName = "Deluxe Wash", price = 50 })" class="btn btn-primary">
                        Book Now
                    </a>

                </div>
            </div>
        </div>


        <!-- Premium Wash -->
        <div class="card service-card mb-5">
            <div class="row g-0 align-items-stretch">
