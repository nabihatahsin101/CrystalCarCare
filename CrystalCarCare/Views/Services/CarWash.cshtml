@{
    ViewBag.Title = "Car Wash";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .carwash-page {
        background-color: #000;
        min-height: 100vh;
        padding: 40px 0;
    }

    .service-card {
        background-color: #1a1a1a;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 0 15px rgba(255,255,255,0.1);
        margin-bottom: 40px;
    }

        .service-card img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* fills column */
        }

        .service-card .details {
            padding: 20px;
            color: #fff;
        }
</style>
<div class="carwash-page py-5">
    <div class="container">
        <!-- Deluxe Wash -->
        <div class="card service-card mb-5">
            <div class="row g-0 align-items-stretch">
                <!-- Image -->
                <div class="col-md-6">
                    <img src="~/Content/images/carwash3.jpeg" alt="Deluxe Wash" />
                </div>
                <!-- Details -->
                <div class="col-md-6 details d-flex flex-column justify-content-center">
                    <h3>Deluxe Wash</h3>
                    <p class="lead">Full premium wash + Interior deep cleaning and tire polish.</p>
                    <p><strong>Price:</strong> $50</p>
                    <p><strong>What’s Included:</strong></p>
                    <ul>
                        <li>Exterior wash</li>
                        <li>Interior deep cleaning</li>
                        <li>Tire polish</li>
                        <li>Waxing & Engine cleaning</li>
                    </ul>
                    <a href="@Url.Action("Create", "Bookings", new { serviceName = "Deluxe Wash", price = 50 })" class="btn btn-primary">
                        Book Now
                    </a>
                </div>
            </div>
        </div>


        <!-- Premium Wash -->
        <div class="card service-card mb-5">
            <div class="row g-0 align-items-stretch">
                <!-- Image -->
                <div class="col-md-6">
                    <img src="~/Content/images/carwash2.jpeg" alt="Premium Wash" />
                </div>
                <!-- Details -->
                <div class="col-md-6 details d-flex flex-column justify-content-center">
                    <h3>Premium Wash</h3>
                    <p class="lead">Full premium wash + Interior deep cleaning and tire polish.</p>
                    <p><strong>Price:</strong> $50</p>
                    <p><strong>What’s Included:</strong></p>
                    <ul>
                        <li>Exterior wash</li>
                        <li>Interior deep cleaning</li>
                        <li>Tire polish</li>
                        <li>Waxing & Engine cleaning</li>
                    </ul>
                    <a href="@Url.Action("Create", "Bookings", new { serviceName = "Premium Wash", price = 50 })" class="btn btn-primary">
                        Book Now
                    </a>
                </div>
            </div>
        </div>

        <!-- Basic Wash -->
        <div class="card service-card mb-5">
            <div class="row g-0 align-items-stretch">
                <!-- Image -->
                <div class="col-md-6">
                    <img src="~/Content/images/carwash1.jpeg" alt="Basic Wash" />
                </div>
                <!-- Details -->
                <div class="col-md-6 details d-flex flex-column justify-content-center">
                    <h3>Basic Wash</h3>
                    <p class="lead">Full premium wash + Interior deep cleaning and tire polish.</p>
                    <p><strong>Price:</strong> $50</p>
                    <p><strong>What’s Included:</strong></p>
                    <ul>
                        <li>Exterior wash</li>
                        <li>Interior deep cleaning</li>
                        <li>Tire polish</li>
                        <li>Waxing & Engine cleaning</li>
                    </ul>
                    <a href="@Url.Action("Create", "Bookings", new { serviceName = "Basic Wash", price = 50 })" class="btn btn-primary">
                        Book Now
                    </a>


                </div>
            </div>
        </div>

    </div>
</div>
