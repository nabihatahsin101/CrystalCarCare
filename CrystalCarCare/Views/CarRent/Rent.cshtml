@model CrystalCarCare.Models.Car

@{
    ViewBag.Title = "Rent Car - CrystalCarCare";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* -------------------- Global -------------------- */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #111; /* dark background */
            color: #FFD700; /* gold text */
        }

        a {
            color: #FFD700;
            text-decoration: none;
            transition: 0.3s;
        }

            a:hover {
                color: #FFA500;
            }

        /* -------------------- Container -------------------- */
        .car-details {
            max-width: 650px;
            margin: 0 auto;
            padding: 25px;
            background-color: #1a1a1a; /* dark card bg */
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0,0,0,0.6);
            border: 1px solid #444;
        }

        /* -------------------- Image -------------------- */
        .car-img {
            max-height: 320px;
            object-fit: cover;
            border-radius: 12px;
            margin-bottom: 20px;
            box-shadow: 0 8px 20px rgba(255, 215, 0, 0.25);
        }

        /* -------------------- Headings -------------------- */
        h1, h3 {
            color: #FFD700;
        }

        /* -------------------- Form -------------------- */
        .form-label {
            font-weight: 600;
            color: #FFD700;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #444;
            background: #111;
            color: #FFD700;
        }

            .form-control:focus {
                border-color: #FFD700;
                box-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
                outline: none;
                background: #f5f2f2;
            }

        /* -------------------- Buttons -------------------- */
        .btn-success {
            background-color: #FFD700;
            border-color: #FFD700;
            color: #111;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-success:hover {
                background-color: #FFA500;
                border-color: #FFA500;
                transform: scale(1.05);
                box-shadow: 0 8px 20px rgba(255, 215, 0, 0.4);
            }

        .btn-outline-secondary {
            border-color: #FFD700;
            color: #FFD700;
        }

            .btn-outline-secondary:hover {
                background-color: #FFD700;
                color: #111;
            }

        /* -------------------- Availability -------------------- */
        .text-success {
            color: #32CD32; /* lime green */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Rent @Model.Make @Model.Model</h1>
        <div class="car-details">
            <img src="/Content/img/@(Model.Make.ToLower().Replace(" ", "_") + "_" + Model.Model.ToLower().Replace(" ", "_") + ".jpg")"
                 class="car-img w-100" alt="@Model.Make @Model.Model">

            <h3>@Model.Make @Model.Model (@Model.Year)</h3>
            <p><strong>Price per day:</strong> $@Model.RentalPricePerDay</p>
            <p><strong>Availability:</strong> <span class="text-success">Available</span></p>

            <!-- Booking Form -->
            <form action="@Url.Action("Book", "CarRent")" method="post" class="mt-4">
                <input type="hidden" name="carId" value="@Model.Id" />
                <div class="mb-3">
                    <label for="rentalDays" class="form-label">Rental Days</label>
                    <input type="number" class="form-control" id="rentalDays" name="rentalDays" min="1" required />
                </div>
                <div class="mb-3">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" required />
                </div>
                <button type="submit" class="btn btn-success w-100">Confirm Booking</button>
            </form>

            <a href="@Url.Action("Index", "CarRent")" class="btn btn-outline-secondary w-100 mt-3">Back to Car List</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
