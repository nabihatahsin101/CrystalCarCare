@model CrystalCarCare.Models.Car

@{
    ViewBag.Title = "Rent Car - CrystalCarCare";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .car-details {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .car-img {
            max-height: 300px;
            object-fit: cover;
            border-radius: 8px;
        }

        .form-label {
            font-weight: bold;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Rent @Model.Make @Model.Model</h1>
        <div class="car-details">
            <img src="/Content/img/@(Model.Make.ToLower().Replace(" ", "_") + "_" + Model.Model.ToLower().Replace(" ", "_") + ".jpg")" class="car-img w-100 mb-3" alt="@Model.Make @Model.Model">
            <h3>@Model.Make @Model.Model (@Model.Year)</h3>
            <p><strong>Price per day:</strong> $@Model.RentalPricePerDay</p>
            <p><strong>Availability:</strong> <span class="text-success">Available</span></p>

            <!-- Booking Form (Placeholder) -->
            <form action="@Url.Action("Book", "CarRent")" method="post" class="mt-4">
                <input type="hidden" name="carId" value="@Model.Id" />
                <div class="mb-3">
                    <label for="rentalDays" class="form-label">Rental Days</label>
                    <input type="number" class="form-control" id="rentalDays" name="rentalDays" min="1" required />
                </div>
                <div class="mb-3">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" required />
                </div>
                <button type="submit" class="btn btn-success w-100">Confirm Booking</button>
            </form>
            <a href="@Url.Action("Index", "CarRent")" class="btn btn-outline-secondary w-100 mt-3">Back to Car List</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>