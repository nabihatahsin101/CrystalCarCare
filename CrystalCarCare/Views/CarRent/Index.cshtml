@model IEnumerable<CrystalCarCare.Models.Car>

@{
    ViewBag.Title = "Car Rental - Crystal Car Care";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* -------------------- Global -------------------- */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #111; /* dark background */
            color: #FFD700; /* gold text */
        }

        a {
            color: #FFD700;
            text-decoration: none;
            transition: 0.3s;
        }

            a:hover {
                color: #FFA500;
            }

        /* -------------------- Cards -------------------- */
        .card {
            background-color: #1a1a1a; /* dark card background */
            border: 1px solid #444;
            border-radius: 12px;
            color: #FFD700;
            box-shadow: 0 6px 15px rgba(0,0,0,0.5);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 30px rgba(255, 215, 0, 0.3);
            }

        .card-img-top {
            height: 200px;
            object-fit: cover;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
        }

        /* -------------------- Buttons -------------------- */
        .btn-primary {
            background-color: #FFD700;
            border-color: #FFD700;
            color: #111;
            font-weight: 600;
            transition: 0.3s all;
        }

            .btn-primary:hover {
                background-color: #FFA500;
                border-color: #FFA500;
                transform: scale(1.05);
                box-shadow: 0 8px 20px rgba(255, 215, 0, 0.4);
            }

        .btn-secondary {
            background-color: #1a1a1a;
            border-color: #444;
            color: #FFD700;
            font-weight: 600;
        }

            .btn-secondary:disabled {
                opacity: 0.6;
            }

        /* -------------------- Form -------------------- */
        .form-control {
            border-radius: 8px;
            border: 1px solid #444;
            background: #111;
            color: #FFD700;
        }

            .form-control:focus {
                border-color: #FFD700;
                box-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
                outline: none;
                background: #111;
            }

        /* -------------------- Sort Links -------------------- */
        .sort-link {
            color: #FFD700;
            font-weight: 500;
            transition: 0.3s;
        }

            .sort-link:hover {
                color: #FFA500;
            }

        /* -------------------- Available Status -------------------- */
        .text-success {
            color: #32CD32; /* lime green for dark bg */
        }

        .text-danger {
            color: #FF4500; /* orange-red for dark bg */
        }

        /* -------------------- Headings -------------------- */
        h1 {
            color: #FFD700;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Car Rental Options</h1>

        <!-- Search Form -->
        <form action="@Url.Action("Index")" method="get" class="mb-4">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Search by Make or Model" value="@ViewBag.SearchString" />
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>

        <!-- Sort Links -->
        <div class="mb-3 text-center">
            Sort by:
            <a href="@Url.Action("Index", new { sortOrder = ViewBag.PriceSortParm, searchString = ViewBag.SearchString })" class="sort-link">Price</a> |
            <a href="@Url.Action("Index", new { sortOrder = ViewBag.YearSortParm, searchString = ViewBag.SearchString })" class="sort-link">Year</a>
        </div>

        <!-- Car List -->
        <div class="row">
            @foreach (var car in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="/Content/img/@(car.Make.ToLower().Replace(" ", "_") + "_" + car.Model.ToLower().Replace(" ", "_") + ".jpg")" class="card-img-top" alt="@car.Make @car.Model">
                        <div class="card-body">
                            <h5 class="card-title">@car.Make @car.Model (@car.Year)</h5>
                            <p class="card-text">Price per day: <strong>$@car.RentalPricePerDay</strong></p>
                            <p class="card-text">Available: <span class="@(car.IsAvailable ? "text-success" : "text-danger")">@(car.IsAvailable ? "Yes" : "No")</span></p>
                            @if (car.IsAvailable)
                            {
                                <a href="@Url.Action("Rent", "CarRent", new { id = car.Id })" class="btn btn-primary w-100">Rent Now</a>
                            }
                            else
                            {
                                <button class="btn btn-secondary w-100" disabled>Rent Now</button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
