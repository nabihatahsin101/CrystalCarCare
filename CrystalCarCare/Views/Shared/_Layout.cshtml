        .navbar {
            background: linear-gradient(135deg, #003087, #00a8e8);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.8rem;
            color: #fff !important;
            display: flex;
            align-items: center;
        }

            .navbar-brand:hover {
                color: #ffd700 !important;
                transform: scale(1.05);
                transition: 0.3s;
            }

        .nav-link {
            color: #fff !important;
            font-weight: 500;
            position: relative;
            transition: 0.3s;
        }

            .nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                background: #ffd700;
                bottom: -5px;
                left: 0;
                transition: width 0.3s;
            }

            .nav-link:hover {
                color: #ffd700 !important;
            }

                .nav-link:hover::after {
                    width: 100%;
                }

        .navbar-nav .active > .nav-link,
        .navbar-nav .nav-link.active {
            color: #ffd700 !important;
        }

        /* Footer Styles */
        footer {
            background: linear-gradient(135deg, #003087, #00205b);
            color: #fff;
            padding: 3rem 0;
        }

            footer h5 {
                margin-bottom: 1rem;
                font-weight: 700;
            }

            footer a {
                color: #fff;
                text-decoration: none;
                transition: 0.3s;
            }

                footer a:hover {
                    color: #00a8e8;
                }

        .footer-social a {
            display: inline-block;
            margin-right: 0.8rem;
            font-size: 1.3rem;
            background: rgba(255,255,255,0.1);
            padding: 0.5rem;
            border-radius: 50%;
            transition: 0.3s;
        }

            .footer-social a:hover {
                background: #00a8e8;
                color: #fff;
                transform: scale(1.2);
            }
    </style>

