<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Crystal Car Care</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <style>
        /* -------------------- Global -------------------- */
        body {
            font-family: 'Roboto', sans-serif;
            background: #111; /* Full dark background */
            color: #e0e0e0;
            scroll-behavior: smooth;
        }

        a {
            text-decoration: none;
            transition: 0.3s;
        }

            a:hover {
                color: #FFD700;
            }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        /* -------------------- Navbar -------------------- */
        .navbar {
            background: #111;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0 4px 15px rgba(0,0,0,0.5);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.8rem;
            color: #FFD700 !important;
            letter-spacing: 1px;
            transition: 0.3s;
        }

            .navbar-brand:hover {
                color: #FFA500 !important;
                transform: scale(1.05);
            }

        .nav-link {
            color: #e0e0e0 !important;
            font-weight: 500;
            position: relative;
            transition: all 0.3s;
        }

            .nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                background: #FFD700;
                bottom: -5px;
                left: 0;
                transition: width 0.3s;
            }

            .nav-link:hover {
                color: #FFD700 !important;
            }

                .nav-link:hover::after {
                    width: 100%;
                }

        .btn-cta {
            background: #FFD700;
            color: #111 !important;
            font-weight: 600;
            border-radius: 8px;
            padding: 0.7rem 1.5rem;
            margin-left: 1rem;
            box-shadow: 0 6px 15px rgba(255, 215, 0,0.2);
            transition: 0.3s all;
        }

            .btn-cta:hover {
                background: #FFA500;
                color: #111 !important;
                transform: scale(1.05);
                box-shadow: 0 10px 25px rgba(255, 215, 0,0.4);
            }

        /* -------------------- Hero Section -------------------- */
        .hero {
            background: linear-gradient(135deg, #111, #1a1a1a);
            background-image: url('https://images.unsplash.com/photo-1581091012184-3c0b71d607f7?auto=format&fit=crop&w=1950&q=80');
            background-size: cover;
            background-position: center;
            min-height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            color: #FFD700;
        }

            .hero::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0,0,0,0.6); /* dark overlay */
            }

        .hero-content {
            position: relative;
            text-align: center;
            max-width: 700px;
            z-index: 2;
        }

            .hero-content h1 {
                font-size: 3rem;
                font-weight: 700;
                margin-bottom: 1rem;
            }

            .hero-content p {
                font-size: 1.2rem;
                margin-bottom: 2rem;
                color: #fff;
            }

            .hero-content .btn-cta {
                font-size: 1.1rem;
                padding: 0.8rem 2rem;
            }

        /* -------------------- Cards -------------------- */
        .card-glass {
            background: rgba(0,0,0,0.6); /* fully dark card */
            backdrop-filter: blur(5px);
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.8);
            padding: 2rem;
            color: #FFD700;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card-glass:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 40px rgba(255, 215, 0, 0.3);
            }

        /* -------------------- Forms -------------------- */
        .form-control, .form-select {
            border-radius: 8px;
            border: 1px solid #444;
            background: #111;
            color: #FFD700;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #FFD700;
                box-shadow: 0 0 10px rgba(255, 215, 0,0.3);
                outline: none;
                background: #111;
            }

        /* -------------------- Footer -------------------- */
        footer {
            background: linear-gradient(135deg, #111, #1a1a1a);
            color: #fff;
            padding: 3rem 0;
            border-top: 5px solid #FFD700;
        }

            footer h5 {
                font-size: 1.2rem;
                margin-bottom: 1rem;
                color: #FFD700;
            }

            footer ul li a {
                color: #e0e0e0;
                font-size: 0.95rem;
                transition: 0.3s;
            }

                footer ul li a:hover {
                    color: #FFD700;
                }

        .footer-social a {
            display: inline-flex;
            justify-content: center;
            align-items: center;
            width: 38px;
            height: 38px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            margin-right: 0.5rem;
            transition: all 0.3s;
        }

            .footer-social a:hover {
                background: #FFD700;
                color: #111;
                transform: scale(1.2);
            }

        /* -------------------- Responsive -------------------- */
        @@media (max-width:768px) {
            .navbar-nav {
                text-align: center;
            }

            .btn-cta {
                margin: 0.5rem 0 0 0;
            }

            .hero-content h1 {
                font-size: 2rem;
            }

            .hero-content p {
                font-size: 1rem;
            }
        }
    </style>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Navbar -->
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            @Html.ActionLink("Crystal Car Care", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#services">Services</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Booking", "User")" class="nav-link">Book Now</a>
                    </li>

                    </li>
                    <li>@Html.ActionLink("Rent", "Index", "CarRent", null, new { @class = "nav-link" })</li>



                    <li>@Html.ActionLink("Profile", "Index", "UserProfile", new { area = "" }, new { @class = "nav-link" })</li>

                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Booking Status", "BookingStatus", "User", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Profile", "Profile", "User", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Log Out", "LogOff", "Account", null, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Register", "Signup", "Account", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Log In", "Login", "Account", null, new { @class = "nav-link" })
                        </li>



                    }




                </ul>

                <!-- Login / Register Partial -->

            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <h5>Crystal Car Care</h5>
                    <p>Delivering premium automotive services with unmatched attention to detail.</p>
                    <div class="footer-social">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <h5>Services</h5>
                    <ul class="list-unstyled">
                        <li><a href="/Services/CarWash">Car Wash</a></li>
                        <li><a href="/Services/Mechanic">Mechanic Services</a></li>
                        <li><a href="/Services/Additional">Additional Services</a></li>
                        <li><a href="/Services/Rent">Rent</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/User/BookingStatus">Booking Status</a></li>
                        <li><a href="/User/Profile">Profile</a></li>
                        <li><a href="/Account/Register">Register</a></li>
                        <li><a href="/Account/Login">Log In</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h5>Contact Us</h5>
                    <ul class="list-unstyled">
                        <li>123 Auto Care Lane</li>
                        <li>City, State 12345</li>
                        <li>Phone: (555) 123-4567</li>
                        <li>Email: info@crystalcarcare.com</li>
                    </ul>
                </div>
            </div>
            <div class="text-center mt-3">&copy; 2025 Crystal Car Care. All rights reserved.</div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
