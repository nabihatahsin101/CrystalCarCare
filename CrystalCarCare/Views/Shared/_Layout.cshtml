<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Crystal Car Care</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Crystal Car Care", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Car Wash", "CarWash", "Services", new { area = "" }, new { @class = "nav-link", @aria_label = "Car Wash Service" })</li>
                    <li>@Html.ActionLink("Mechanic Services", "Mechanic", "Services", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Additional Services", "Additional", "Services", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Car Rent", "Index", "CarRent", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Booking Status", "BookingStatus", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Profile", "Index", "Profile", new { area = "" }, new { @class = "nav-link" })</li>

                    <li>@Html.ActionLink("Book Now", "Booking", "User", routeValues: null, htmlAttributes: new { @class = "nav-link", @aria_label = "Book Now" })</li>

                </ul>

                <!-- Login / Register Partial -->
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-4">
        @RenderBody()
    </div>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
